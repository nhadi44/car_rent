{{> header}}
{{> hero}}
{{> navadmin}}

{{#if message}}
<div class="alert alert-{{message.type}} container" role="alert">
    {{message.message}}
</div>
{{/if}}

<div class="container">
    <h4>{{greeting}}</h4>
</div>
<div class="container mt-3">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>No</th>
                <th>Car Name</th>
                <th>Plat Number</th>
                <th>Price</th>
                <th>Type</th>
                <th>Brand</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each results}}
            <tr>
                <td>{{@index}}</td>
                <td>{{this.name}}</td>
                <td>{{this.plat_number}}</td>
                <td>{{this.price}}</td>
                <td>{{this.brand}}</td>
                <td>{{this.type}}</td>
                <td class="text-capitalize">{{this.status}}</td>
                <td>
                    <a href="/edit-car/{{this.id}}" class="btn btn-success"><i class="far fa-edit"
                            style="padding-right:8px ;"></i>Edit</a>
                    <a href="/delete-car/{{this.id}}" class="btn btn-danger"><i class="far fa-trash-alt"
                            style="padding-right:8px ;"></i>Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{> footer}}