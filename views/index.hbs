{{> header}}
{{> hero}}
{{> navbar}}

<main>
  <div class="container-fluid justify-content-center">
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="../public/img/jpg/mitsubishi-expander.jpg" class="d-block w-100 img-slide" />
        </div>
        <div class="carousel-item">
          <img src="../public/img/jpg/suzuki-ertiga.jpg" class="d-block w-100 img-slide" />
        </div>
        <div class="carousel-item">
          <img src="../public/img/jpg/toyota-avanza-2019.jpg" class="d-block w-100 img-slide" />
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
        data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
        data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
  {{!-- content --}}
  <div class="container mt-4 mb-5 mt-5">
    <div class="row">
      {{#each car}}
      <div class="col">
        <div class="card" style="width: 18rem;">
          <img src="{{this.image}}" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text text-md">{{this.price}}
            </p>
            <a href="/transaction/{{this.id}}" class="btn btn-danger" style="width: 100%;">Checkout</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</main>
{{> footer}}